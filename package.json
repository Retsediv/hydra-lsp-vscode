{
    "name": "hydra-lsp",
    "displayName": "Hydra LSP",
    "description": "A Visual Studio Code extension for Hydra YAML configs LSP support using `hydra-lsp`.",
    "version": "0.1.3",
    "preview": true,
    "serverInfo": {
        "name": "Language Server for Hydra YAML Configs",
        "module": "hydra-lsp"
    },
    "publisher": "zhuravchak",
    "license": "MIT",
    "homepage": "https://github.com/retsediv/hydra-lsp-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/retsediv/hydra-lsp-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/retsediv/hydra-lsp-vscode/issues"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "hydra",
        "yaml",
        "lsp",
        "hydra-lsp"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Language Packs"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with Language Server for Hydra YAML Configs."
        }
    },
    "activationEvents": [
        "onLanguage:yaml",
        "workspaceContains:*.yaml"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o hydra-lsp.vsix"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "hydra-lsp.args": {
                    "default": [],
                    "description": "Arguments passed in. Each argument is a separate item in the array.",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "hydra-lsp.showNotifications": {
                    "default": "off",
                    "description": "Controls when notifications are shown by this extension.",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "All notifications are turned off, any errors or warning are still available in the logs.",
                        "Notifications are shown only in the case of an error.",
                        "Notifications are shown for errors and warnings.",
                        "Notifications are show for anything that the server chooses to show."
                    ],
                    "scope": "machine",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "Restart Server",
                "category": "Language Server for Hydra YAML Configs",
                "command": "hydra-lsp.restart"
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "1.0.5",
        "fs-extra": "^11.1.1",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/vscode": "1.78.0",
        "@types/glob": "^8.1.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vscode/test-electron": "^2.3.6",
        "@vscode/vsce": "^2.19.0",
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "prettier": "^3.0.0",
        "typescript": "^5.1.6",
        "ts-loader": "^9.5.1",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}
